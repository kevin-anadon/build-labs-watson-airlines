{
  "openapi": "3.0.0",
  "info": {
    "title": "Watson Airlines Customer Experience",
    "description": "This is a REST API for the Watson Airlines Customer Experience use case.",
    "contact": {
      "name": "Kevin Anadon",
      "email": "mathewanadon@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:3000/api",
      "description": "Local Server"
    },
    {
      "url": "https://bl-watson-airlines.164312aqh8r6.us-south.codeengine.appdomain.cloud/api",
      "description": "IBM Code Engine Deployment"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Resource not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/airlines": {
      "get": {
        "description": "Get Assocciated Airlines with the IATA_CODE",
        "parameters": [
          {
            "name": "IATA_CODE",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Airline"
                      }
                    }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable"
          }
        }
      }
    },
    "/airlines/about": {
      "get": {
        "description": "Get Watson Airline Description",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "object",
                      "properties": {
                        "watsonAirlineDescription": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable"
          }
        }
      }
    },
    "/flights": {
      "get": {
        "description": "Get flights with ORIGIN_AIRPORT, DESTINATION_AIRPORT, DEPARTURE_DATE, AIRLINE as criteria",
        "parameters": [
          {
            "name": "ORIGIN_AIRPORT",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "DESTINATION_AIRPORT",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "DEPARTURE_DATE",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "AIRLINE",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "object",
                      "properties": {
                        "flight": {
                          "$ref": "#/components/schemas/Flight"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable"
          }
        }
      }
    },
    "/flights/{id}": {
      "get": {
        "description": "Get Flight by ID (mongoID)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "object",
                      "properties": {
                        "flight": {
                          "$ref": "#/components/schemas/Flight"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Flight": {
        "type": "object",
        "properties": {
          "AIRLINE": {
            "type": "string",
            "example": "Airline Identifier required!"
          },
          "FLIGHT_NUMBER": {
            "type": "number",
            "example": 123
          },
          "ORIGIN_AIRPORT": {
            "type": "string",
            "example": "Starting Airport (IATA) required!"
          },
          "DESTINATION_AIRPORT": {
            "type": "string",
            "example": "Destination Airport (IATA) required!"
          },
          "CANCELLED": {
            "type": "boolean",
            "example": false
          },
          "DEPARTURE_DATE": {
            "type": "string",
            "format": "date"
          },
          "ARRIVAL_DATE": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "Airline": {
        "type": "object",
        "properties": {
          "IATA_CODE": {
            "type": "string",
            "example": "AA",
            "description": "Airline's identifier required!"
          },
          "AIRLINE": {
            "type": "string",
            "example": "American Airlines",
            "description": "Airline's name required!"
          }
        },
        "required": ["IATA_CODE", "AIRLINE"]
      },
      "Airport": {
        "type": "object",
        "properties": {
          "IATA_CODE": {
            "type": "string",
            "example": "LAX",
            "description": "Location Identifier required!"
          },
          "AIRPORT": {
            "type": "string",
            "example": "Los Angeles International Airport",
            "description": "Airport's name required!"
          },
          "CITY": {
            "type": "string",
            "example": "Los Angeles",
            "description": "Airport's city required!"
          },
          "STATE": {
            "type": "string",
            "example": "California",
            "description": "Airport's state required!"
          },
          "COUNTRY": {
            "type": "string",
            "example": "United States",
            "description": "Airport's country required!"
          }
        },
        "required": ["IATA_CODE", "AIRPORT", "CITY", "STATE", "COUNTRY"]
      }
    }
  },
  "security": []
}